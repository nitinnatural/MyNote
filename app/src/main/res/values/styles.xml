<resources>


    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>


        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/sexy_pink</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>




    <style name="ListItemTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ListItemSubText">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ListItemDate">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_tiny</item>
    </style>

    <style name="NoteTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteContent">
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteDate">
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

</resources>
